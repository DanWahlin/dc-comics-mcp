  "devDependencies": {
    "@types/node": "^22.13.17",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "semantic-release": "^24.2.3",
    "semantic-release-npm-github": "^5.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "files": [
    "dist/**/*"
  ]
